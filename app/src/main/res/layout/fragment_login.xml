<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/lotti3"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Food Hub Login.."
        android:layout_marginTop="20dp"
        android:textAppearance="@style/MaterialAlertDialog.Material3"
        android:textColor="#673AB7"
        android:gravity="center"
        android:textSize="25dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Email..."
        android:layout_marginTop="15sp"
        android:layout_marginHorizontal="25sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userTV1"
            app:errorTextColor="#000"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Password..."
        app:endIconMode="password_toggle"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passTV1"
            android:inputType="textPassword"
            app:errorTextColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginTV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#03A9F4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="or"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/MaterialAlertDialog.Material3"
        android:textColor="#F5F8F8"
        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/creativTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Creative Account"
        android:layout_marginTop="10sp"
        android:textAppearance="@style/MaterialAlertDialog.Material3"
        android:textColor="#9C27B0"
        android:gravity="center"
        android:textSize="20dp"/>





</LinearLayout>